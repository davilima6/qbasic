   IF SORTE$ = ESCOLHA$ THEN PRINT "SAIU "; SORTE$; "! VOCE GANHOU!"
   IF SORTE$ <> ESCOLHA$ THEN PRINT "SAIU "; SORTE$; "! VOCE PERDEU!"
