   DO
   INPUT ESCOLHA$
   LET ESCOLHA$ = UCASE$(ESCOLHA$)
   LOOP UNTIL ESCOLHA$ = "THAU" OR ESCOLHA$ = "CARA" OR ESCOLHA$ = "COROA"
   IF ESCOLHA$ = "THAU" THEN END
   IF ESCOLHA$ = "CARA" OR ESCOLHA$ = "COROA" THEN 20

